<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="WinDE.TaskbarButton" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Name="userControl1"
	MouseUp="UserControl1_MouseUp" Background="Transparent">
	<Grid
		Margin="5"
		Width="40"
		Height="40">
		<Image
			Name="imgIcon"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="0,0,0,0" />
		<TextBlock
			Name="lblTitle"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="0,26,0,0" />
	</Grid>
</UserControl>